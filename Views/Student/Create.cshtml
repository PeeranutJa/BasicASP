@model Student;
@{
    ViewData["Title"] = "Update score";
}

<h1 style="color :steelblue" class="text-center">Update Score Record</h1>
<form method="POST" asp-controller="Student" asp-action="Create">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input type="text" asp-for="Id" class="form-control">
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="int" asp-for="Score" class="form-control">
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <button type="submit"class="btn btn-primary my-3">Save</button>
</form>

