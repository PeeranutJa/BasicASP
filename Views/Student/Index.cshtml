@model IEnumerable<BasicASP.Models.Student>;
@{
    ViewData["Title"] = "Show score";
}

@if (Model.Count()>0)
{
    <h1 style="color :steelblue" class="text-center"><b>Test score - Computer subject</b></h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Test Score</th>
                <th>Result</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Score</td>
                    <td>
                        @if (student.Score > 49)
                        {
                            <strong class="text-success">Passed</strong>
                        }
                        else
                        {
                            <strong class="text-danger">Not passed</strong>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning"
                   asp-controller="Student"
                   asp-action="Edit"
                   asp-route-id="@student.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                   asp-controller="Student"
                   asp-action="Delete"
                   asp-route-id="@student.Id"
                           onclick="return confirm('Do you want to delete this record? (@student.Name)')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 style="color :steelblue" class="text-center"><b>There is no data in the record</b></h1>
}

